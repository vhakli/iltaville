{
	"compilerOptions": {
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": ["ESNext"],
		"target": "ESNext",
		"types": ["node"],
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
